{
  "$jason": {
    "head": {
      "title": "Hello World",
      "description": "First tutorial with Jasonette",
      "offline": "true",
      "styles": {},
      "data": {
        "users": {
          "@": "https://github.com/linnal/jasonete_tutorial/raw/master/data/food.json"
        }
      },
      "templates": {
        "body": {
          "header": {
            "title": "Jasonette",
            "style": {
              "background": "#b4439f",
              "color": "#ffffff",
              "font": "AvenirNext-Bold",
              "size": "14"
            },
            "menu": {
              "text": "View JSON",
              "href": {
                "url": "https://github.com/Jasonette/Jasonpedia/blob/gh-pages/demo.json",
                "view": "web"
              }
            }
          },
          "sections": [{
              "items": {
                  "{{#each users}}": {
                    "type": "horizontal",
                    "style": {
                      "font": "HelveticaNeue",
                      "size": "20",
                      "color": "#3e4041",
                      "padding": "10"
                    },
                    "components": [{
                      "type": "label",
                      "text": "{{name}}"
                    },
                    {
                      "type": "label",
                      "text": "{{quantity}}",
                      "style": {"align":"right"}
                    }]
                  }
                }
            }]
        }
      }
    }
  }
}
